<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#AEF8FA"
    tools:context=".SelectActividad">

    <TextView
        android:id="@+id/txtEvidencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/diseno_text"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="REGISTRO EVIDENCIA"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnElegir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/diseno_botones"
        android:text="ELEGIR"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imgSelect"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center">

    </ImageView>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/diseno_botones"
        android:text="GUARDAR"
        android:textStyle="bold"/>


</LinearLayout>